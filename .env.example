DB_PATH=./pos.db
SERVER_PORT=8080

# JWT Secret for authentication (change in production!)
JWT_SECRET=your-secret-key-change-in-production

# Cloud Sync Configuration
# Enable/disable cloud synchronization
SYNC_ENABLED=false

# Cloud API URL (e.g., https://cloud.yourcompany.com)
CLOUD_API_URL=

# API Key for cloud authentication
CLOUD_API_KEY=

# Outlet Identification
OUTLET_ID=
OUTLET_CODE=

# Webhook secret for verifying cloud webhooks
WEBHOOK_SECRET=

# Sync interval in minutes (default: 5)
SYNC_INTERVAL_MINUTES=5
